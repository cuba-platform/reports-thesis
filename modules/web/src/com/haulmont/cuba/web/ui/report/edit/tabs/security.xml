<window xmlns="http://schemas.haulmont.com/cuba/4.0/window.xsd">
    <#assign width = 200>
    <#assign treeHeight = 400>
    <#assign treeWidth = 500>
    <layout expandLayout="false">
        <split orientation="horizontal">
            <groupBox>
                <vbox margin="true" spacing="true" expand="rolesTable">
                    <label value="msg://securityFrame.roles" stylename="h2"/>
                    <table id="rolesTable" width="60%">
                        <buttonsPanel>
                            <button action="rolesTable.add" caption="msg://roles.addRole" icon="icons/add.png"/>
                            <button action="rolesTable.remove" caption="msg://roles.removeRole"
                                    icon="icons/remove.png"/>
                        </buttonsPanel>
                        <columns>
                            <column id="name" caption="msg://roles.roleName"/>
                        </columns>
                        <rows datasource="rolesDs"/>
                    </table>
                </vbox>
            </groupBox>
            <groupBox>
                <vbox margin="true" spacing="true" expand="screenTable">
                    <label value="msg://securityFrame.screens" stylename="h2"/>
                    <table id="screenTable" width="60%">
                        <buttonsPanel>
                            <button action="screenTable.create" caption="msg://screens.createScreen"
                                    icon="icons/create.png"/>
                            <button action="screenTable.remove" caption="msg://screens.removeScreen"
                                    icon="icons/remove.png"/>
                        </buttonsPanel>
                        <columns>
                            <column id="screenId" caption="msg://screens.screenId"/>
                        </columns>
                        <rows datasource="reportScreensDs"/>
                    </table>
                </vbox>
            </groupBox>
        </split>
    </layout>
</window>
