<window
        xmlns="http://schemas.haulmont.com/cuba/4.0/window.xsd"
        class="com.haulmont.cuba.web.ui.report.browse.ReportBrowser"
        messagesPack="com.haulmont.cuba.web.ui.report"
        lookupComponent="table"
        caption="msg://reportBrowser"
        focusComponent="table"
        >

    <dsContext>
        <groupDatasource
                id="reportDs"
                class="com.haulmont.cuba.report.Report"
                view="report.view"
                >
            <query>
                <![CDATA[select r from report$Report r]]>
                <filter>
                    <and>
                        <c join=",report$ReportInputParameter p">p.report.id = r.id and p.className like
                            :param$javaClassName
                        </c>
                    </and>
                </filter>
            </query>
        </groupDatasource>
    </dsContext>

    <layout expand="table-panel">
        <vbox id="table-panel" expand="table" spacing="true">
            <groupTable id="table" editable="false" multiselect="true">
                <buttonsPanel>
                    <button action="table.create" icon="icons/create.png"/>
                    <button action="table.edit" icon="icons/edit.png"/>
                    <button action="table.remove" icon="icons/remove.png"/>
                    <button id="import"/>
                    <button id="export"/>
                    <button id="runReport" icon="icons/run.png"/>
                </buttonsPanel>
                <columns>
                    <group>
                        <column id="group" width="200"/>
                    </group>
                    <column id="locName" caption="msg://report.name"/>
                </columns>
                <rows datasource="reportDs"/>
            </groupTable>
        </vbox>
    </layout>
</window>
