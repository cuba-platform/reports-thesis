<window
        xmlns="http://schemas.haulmont.com/cuba/4.0/window.xsd"
        class="com.haulmont.reports.gui.group.edit.ReportGroupEditor"
        datasource="groupDs"
        caption="msg://reportGroupEditor"
        messagesPack="com.haulmont.reports.gui"
        focusComponent="groupProps"
        >

    <dsContext>
        <datasource id="groupDs" class="com.haulmont.cuba.report.ReportGroup" view="_local"/>
    </dsContext>

    <layout expand="windowActions">
        <label value="msg://groupProperties" stylename="h2"/>
        <fieldGroup id="groupProps" datasource="groupDs">
            <field id="title" required="true"/>
            <field id="code"/>
        </fieldGroup>
        <label value="msg://groupLocaleCaption" stylename="h2"/>
        <textField id="localeTextField" datasource="groupDs" property="localeNames"
                   rows="5" cols="30"/>
        <iframe id="windowActions" screen="editWindowActions"/>
    </layout>
</window>
