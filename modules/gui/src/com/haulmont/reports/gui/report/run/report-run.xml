<window
        xmlns="http://schemas.haulmont.com/cuba/4.0/window.xsd"
        class="com.haulmont.cuba.gui.report.run.ReportRun"
        messagesPack="com.haulmont.cuba.gui.report.run"
        lookupComponent="reportsTable"
        caption="msg://reportBrowser"
        >

    <dsContext>
        <collectionDatasource
                id="reportDs"
                class="com.haulmont.cuba.report.Report"
                view="report.edit"
                >
            <datasourceClass>com.haulmont.cuba.gui.report.run.RunReportDatasource</datasourceClass>
            <query>
                <![CDATA[select r from report$Report r]]>
                <filter>
                    <and>
                        <!--todo: move it to datasource-->
                        <c join=",report$ReportInputParameter p">p.report.id = r.id and p.entityMetaClass like :param$entityMetaClass</c>
                        <c>r.reportType = :param$reportType</c>
                    </and>
                </filter>
            </query>
        </collectionDatasource>
    </dsContext>

    <layout>
        <table id="reportsTable" editable="false" width="100%" height="100%">
            <buttonsPanel>
                <button id="runReport" action="reportsTable.runReport" icon="icons/run.png"/>
            </buttonsPanel>
            <columns>
                <column id="name"/>
            </columns>
            <rows datasource="reportDs"/>
        </table>
    </layout>
</window>
