<window xmlns="http://schemas.haulmont.com/cuba/5.5/window.xsd">
    <layout width="100%" expand="spacer">
        <fieldGroup id="mainFields" width="100%">
            <field id="entity" caption="msg://entity" required="true" requiredMessage="msg://fillEntityMsg"
                   description="msg://entityHintMsg" custom="true" width="100%"/>
            <field id="templateFileFormat" caption="msg://templateFileFormat" required="true"
                   requiredMessage="msg://fillTemplateTypeMsg"
                   description="msg://templateTypeHintMsg" custom="true" width="100%"/>
            <field id="reportName" caption="msg://reportName" required="true"
                   requiredMessage="msg://fillReportNameMsg" custom="true"
                   width="100%"/>
            <field id="reportType" caption="msg://reportBuildType"
                   width="-1px" custom="true"
                   description="msg://singleMultiEntityHintMsg"/>
        </fieldGroup>
        <linkButton id="setQuery" caption="msg://setQuery"/>
        <label id="spacer"/>
    </layout>
</window>