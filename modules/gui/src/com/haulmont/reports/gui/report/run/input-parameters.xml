<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        class="com.haulmont.reports.gui.report.run.InputParametersController"
        messagesPack="com.haulmont.reports.gui.report.run"
        caption="msg://inputParameters">

    <layout spacing="true">
        <grid id="parametersGrid" spacing="true" width="100%">
            <columns>
                <column/>
                <column flex="1"/>
            </columns>
            <rows>
                <row>
                </row>
            </rows>
        </grid>
        <hbox spacing="true">
            <button id="printReportBtn" invoke="printReport"
                    caption="msg://input.printReport" icon="icons/run.png"/>
            <button id="cancel" invoke="cancel" caption="msg://actions.Cancel"/>
        </hbox>
    </layout>
</window>