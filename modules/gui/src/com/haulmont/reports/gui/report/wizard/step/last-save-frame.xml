<window xmlns="http://schemas.haulmont.com/cuba/5.2/window.xsd">
    <layout expand="props" width="100%">
        <vbox id="props">
            <grid margin="true" spacing="true" width="100%">
                <columns>
                    <column flex="0"/>
                    <column flex="1"/>
                </columns>
                <rows>
                    <row>
                        <label value="msg://downloadTemplateFile"/>
                        <button id="downloadTemplateFile" width="100%" stylename="link"/>
                    </row>
                    <row>
                        <label value="msg://outputFileFormat"/>
                        <lookupField id="outputFileFormat"  required="true" width="100px"/>
                    </row>
                </rows>
            </grid>
        </vbox>
    </layout>
</window>
