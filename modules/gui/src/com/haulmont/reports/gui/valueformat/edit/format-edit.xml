<window
        xmlns="http://schemas.haulmont.com/cuba/4.1/window.xsd"
        class="com.haulmont.reports.gui.valueformat.edit.ValueFormatEditor"
        messagesPack="com.haulmont.reports.gui"
        datasource="valuesFormatsDs"
        caption="msg://formatsEdit"
        focusComponent="formatFields"
        >

    <dsContext>
        <datasource
                id="valuesFormatsDs"
                class="com.haulmont.reports.entity.ReportValueFormat"
                view="report.edit">
        </datasource>
    </dsContext>

    <assign name="width" value="200"/>

    <layout expand="windowActions" spacing="true">
        <fieldGroup id="formatFields" datasource="valuesFormatsDs">
            <column flex="1">
                <field id="valueName" required="true" caption="msg://valuesFormats.name" width="${width}"
                       requiredMessage="msg://valueNameMsg"/>
                <field id="formatString" required="true"  caption="msg://valuesFormats.format" width="${width}"
                       maxLength="255" custom="true" requiredMessage="msg://formatStringMsg"/>
            </column>
        </fieldGroup>
        <iframe id="windowActions" screen="editWindowActions"/>
    </layout>
</window>